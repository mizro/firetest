<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.AddAnimalActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Imię"
        android:textColorHint="@color/colorText"
        android:textColor="@color/colorText"
        android:textSize="20dp"
        android:ems="10"
        android:id="@+id/editTextDogName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:textColorHint="@color/colorText"
        android:textColor="@color/colorText"
        android:textSize="20dp"
        android:id="@+id/editTextBirthDate"
        android:layout_below="@+id/editTextDogName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Data urodzenia" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dodaj"
        android:textColor="@color/colorText"
        android:background="@drawable/button"
        android:id="@+id/buttonInsertDog"
        android:textSize="18dp"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/cbfemale"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="@color/colorText"
        android:textColor="@color/colorText"
        android:textSize="20dp"
        android:hint="Umaszczenie"
        android:id="@+id/editTextColor"
        android:layout_below="@+id/editTextRace"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editTextRace"
        android:layout_alignEnd="@+id/editTextRace" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Znaki szczególne"
        android:id="@+id/editTextSpecialSigns"
        android:layout_below="@+id/editTextColor"
        android:textColorHint="@color/colorText"
        android:textColor="@color/colorText"
        android:textSize="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editTextColor"
        android:layout_alignEnd="@+id/editTextColor" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Numer identyfikujący"
        android:textColorHint="@color/colorText"
        android:textColor="@color/colorText"
        android:textSize="20dp"
        android:ems="10"
        android:id="@+id/editTextUniqNumber"
        android:layout_below="@+id/editTextSpecialSigns"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextRace"
        android:hint="Rasa"
        android:textColorHint="@color/colorText"
        android:textColor="@color/colorText"
        android:textSize="20dp"
        android:layout_below="@+id/editTextBirthDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editTextBirthDate"
        android:layout_alignEnd="@+id/editTextBirthDate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="3dp"
        android:textColorHint="@color/colorText"
        android:textColor="@color/colorText"
        android:textSize="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Płeć"
        android:id="@+id/textView3"
        android:layout_below="@+id/editTextUniqNumber"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="żeńska"
        android:textSize="20dp"
        android:textColor="@color/colorText"
        android:id="@+id/cbfemale"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="męska"
        android:textSize="20dp"
        android:textColor="@color/colorText"
        android:id="@+id/cbmale"
        android:checked="false"
        android:layout_alignTop="@+id/cbfemale"
        android:layout_toRightOf="@+id/cbfemale"
        android:layout_toEndOf="@+id/cbfemale" />

</RelativeLayout>
